<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--生产日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:text="生产日期:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp">

                    <Spinner
                        android:spinnerMode="dialog"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:id="@+id/et_production_year"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                       android:layout_weight="1"
                        android:singleLine="true" />

                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="年" />

                    <Spinner
                        android:spinnerMode="dialog"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:id="@+id/et_production_month"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                         />

                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="月" />

                    <Spinner
                        android:spinnerMode="dialog"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:id="@+id/et_production_day"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                         />


                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="日" />
                </LinearLayout>
            </LinearLayout>

            <!--生产日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="　有效期:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="54dp">

                    <Spinner
                        android:spinnerMode="dialog"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:id="@+id/et_expiry_year"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="年" />

                    <Spinner
                        android:spinnerMode="dialog"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:id="@+id/et_expiry_month"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="月" />

                    <Spinner
                        android:spinnerMode="dialog"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:id="@+id/et_expiry_day"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />


                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="日" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:minHeight="54dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="　　单位:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />

                <Spinner
                    android:spinnerMode="dialog"
                    android:id="@+id/spinner_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:minHeight="54dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="生产批号:"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/et_product_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minWidth="200dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:minHeight="54dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="采购价格:"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/et_purchase_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits=".0123456789"
                    android:inputType="number"
                    android:minWidth="200dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:minHeight="54dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预售价格:"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/et_presell_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits=".0123456789"
                    android:inputType="number"
                    android:minWidth="200dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:minHeight="54dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text="　　数量:" />

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/et_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits=".0123456789"
                    android:inputType="number"
                    android:minWidth="200dp"
                    android:singleLine="true"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_cancel"
                    android:minHeight="50dp"
                    android:minWidth="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消" />

                <Button
                    android:minHeight="50dp"
                    android:id="@+id/bt_confirm"
                    android:minWidth="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="确定" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>